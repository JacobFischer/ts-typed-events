{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["dom", "es6"],

        "strict": true,
        "declaration": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true,

        "outDir": "js",
        "baseUrl": "./"
    },
    "include": [
        "node_modules/@types/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.d.ts",
        "test/**/*.ts",
        "test/**/*.d.ts"
    ]
}
